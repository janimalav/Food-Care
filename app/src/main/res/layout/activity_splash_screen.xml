<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/splash_back"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/splash_v1" />

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/splash_back"
        android:layout_marginStart="18dp"
        app:srcCompat="@drawable/food_logo" />

    <TextView
        android:id="@+id/splash_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="#1e9730"
        android:textStyle="bold"
        android:background="@drawable/dashed_border"
        android:text="Because we donâ€™t have enough to waste"
        android:padding="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="35dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>